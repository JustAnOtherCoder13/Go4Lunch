<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- toolbar -->
    <style name="toolbar_base_design">
        <item name="title">""</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="toolbar_menu">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">
            @string/toolbar_menu_icon_content_description_activity_main
        </item>
        <item name="android:src">@drawable/ic_menu_icon</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="toolbar_title">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/onPrimaryColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_toEndOf">@id/top_nav_bar_menu_image_button</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="toolbar_search_view">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="searchIcon">@drawable/ic_search_icon</item>
    </style>

    <!-- fragment_authentication-->
    <style name="LoginWithGoogle">
        <item name="icon">@drawable/ic_google_logo</item>
        <item name="iconGravity">start</item>
        <item name="iconSize">17dp</item>
        <item name="android:text">@string/sign_in_with_google_authentication</item>
        <item name="android:textColor">#fff</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:background">#F44336</item>
        <item name="android:layout_marginLeft">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">@dimen/login_button_padding</item>
    </style>

    <style name="LoginWithFacebook">
        <item name="android:text">@string/sign_in_with_facebook_authentication</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
    </style>

    <!-- fragment_restaurant_detail -->
    <style name="action_button_text_detail_fragment">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- fragment_maps -->
    <style name="maps_widget_fragment_maps">
        <item name="android:layout_marginTop">55dp</item>
        <item name="android:layout_marginBottom">55dp</item>
    </style>

</resources>