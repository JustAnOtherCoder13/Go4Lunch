<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- fragment_authentication-->

    <style name="LoginWithGoogle">
        <item name="android:drawableStart">@drawable/ic_google_logo</item>
        <item name="android:text">@string/sign_in_with_google_authentication</item>
        <item name="android:textColor">#fff</item>
        <item name="textAllCaps">false</item>
        <item name="background">#F44336</item>
        <item name="android:layout_marginLeft">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">@dimen/login_button_padding</item>
    </style>

    <style name="LoginWithFacebook">
        <item name="android:drawableStart">@drawable/ic_facebook_logo</item>
        <item name="android:text">@string/sign_in_with_facebook_authentication</item>
        <item name="android:textColor">#fff</item>
        <item name="textAllCaps">false</item>
        <item name="background">#416BC1</item>
        <item name="android:layout_marginLeft">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- fragment_restaurant_detail -->

    <style name="action_button_text_detail_fragment">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>