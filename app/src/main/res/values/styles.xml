<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- fragment_authentication-->
    <style name="LoginWithGoogle">
        <item name="icon">@drawable/ic_google_logo</item>
        <item name="iconGravity">start</item>
        <item name="iconSize">17dp</item>
        <item name="android:text">@string/sign_in_with_google_authentication</item>
        <item name="android:textColor">@color/onPrimaryColor</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:background">#F44336</item>
        <item name="android:layout_marginLeft">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/basic_marge</item>
        <item name="android:padding">@dimen/basic_marge</item>
    </style>

    <style name="LoginWithFacebook">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/login_button_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/basic_marge</item>
        <item name="android:paddingTop">@dimen/basic_marge</item>
        <item name="android:paddingBottom">@dimen/basic_marge</item>
    </style>

    <!-- fragment_restaurant_detail -->
    <style name="action_button_text_detail_fragment">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- fragment_maps -->
    <style name="maps_widget_fragment_maps">
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:layout_marginBottom">?attr/actionBarSize</item>
    </style>

    <!-- restaurant detail fragment -->
    <style name="selected_restaurant_fab_style">
        <item name="android:layout_marginTop">@dimen/xl_marge</item>
        <item name="android:layout_marginEnd">@dimen/basic_marge</item>
        <item name="android:padding">@dimen/little_marge</item>
        <item name="android:src">@drawable/ic_check_icon</item>
    </style>
    <style name="restaurant_name">
        <item name="android:text">@string/restaurant_name_restaurant_detail</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onPrimaryColor</item>
    </style>
    <style name="food_and_address">
        <item name="android:text">@string/food_style_address_restaurant_detail</item>
        <item name="android:textColor">@color/onPrimaryColor</item>
    </style>
    <style name="average_satisfaction">
        <item name="android:layout_marginStart">@dimen/basic_marge</item>
    </style>
    <style name="call_button">
        <item name="android:background">@color/onPrimaryColor</item>
        <item name="android:src">@drawable/ic_phone_icon</item>
    </style>
    <style name="like_button">
        <item name="android:background">@color/onPrimaryColor</item>
        <item name="android:src">@drawable/ic_star_icon</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>
    <style name="website_button">
        <item name="android:background">@color/onPrimaryColor</item>
        <item name="android:src">@drawable/ic_phone_icon</item>
    </style>

    <!-- toolbar -->
    <style name="top_nav_bar_style">
        <item name="titleTextColor">@color/onPrimaryColor</item>
        <item name="menu">@menu/top_nav_bar_menu</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- drawer menu -->
    <style name="drawer_menu_style">
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemTextColor">@color/onPrimaryColor</item>
        <item name="itemIconTint">@color/onPrimaryColor</item>
        <item name="menu">@menu/drawer_menu</item>
        <item name="headerLayout">@layout/drawer_menu_header_layout</item>
    </style>
    <style name="drawer_title">
        <item name="android:text">@string/app_name</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>