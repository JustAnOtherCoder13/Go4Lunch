<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/opinion_star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/opinion_star_detail_content_description_restaurant_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_star_icon" />
    <ImageView
        android:id="@+id/opinion_star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/opinion_star_detail_content_description_restaurant_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/opinion_star_1"
        app:layout_constraintEnd_toStartOf="@id/opinion_star_3"
        app:srcCompat="@drawable/ic_star_icon" />
    <ImageView
        android:id="@+id/opinion_star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/opinion_star_detail_content_description_restaurant_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/opinion_star_2"
        app:srcCompat="@drawable/ic_star_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>