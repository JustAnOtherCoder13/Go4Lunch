<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onPrimaryColor"
    android:layout_marginBottom="@dimen/basic_marge"
    >

    <TextView
        android:id="@+id/drawer_title"
        style="@style/drawer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/drawer_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/user_avatar_drawer_menu"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawer_title"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/drawer_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name_drawer_menu"
        app:layout_constraintBottom_toTopOf="@id/drawer_user_mail"
        app:layout_constraintLeft_toRightOf="@id/drawer_avatar"
        app:layout_constraintTop_toTopOf="@id/drawer_avatar" />

    <TextView
        android:id="@+id/drawer_user_mail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/user_mail_drawer_menu"
        app:layout_constraintBottom_toBottomOf="@id/drawer_avatar"
        app:layout_constraintLeft_toRightOf="@id/drawer_avatar"
        app:layout_constraintTop_toBottomOf="@id/drawer_user_name" />

</androidx.constraintlayout.widget.ConstraintLayout>