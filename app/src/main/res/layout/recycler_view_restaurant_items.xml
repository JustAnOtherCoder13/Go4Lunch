<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/restaurant_name_text_view"
    app:layout_constraintTop_toTopOf="@id/restaurant_photo_image_view"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/distance_text_view"
    app:layout_constraintBottom_toTopOf="@id/food_style_and_address_text_view"
    android:text="Restaurant Name"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/distance_text_view"
        app:layout_constraintLeft_toRightOf="@id/restaurant_name_text_view"
        app:layout_constraintTop_toTopOf="@id/restaurant_name_text_view"
        app:layout_constraintBottom_toBottomOf="@id/restaurant_name_text_view"
        app:layout_constraintRight_toLeftOf="@id/restaurant_photo_image_view"
        android:text="distance"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food_style_and_address_text_view"
        app:layout_constraintTop_toBottomOf="@id/restaurant_name_text_view"
        app:layout_constraintLeft_toLeftOf="@id/restaurant_name_text_view"
        app:layout_constraintBottom_toTopOf="@id/opening_time_text_view"
        android:text="food style - address"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/opening_time_text_view"
        app:layout_constraintTop_toBottomOf="@id/food_style_and_address_text_view"
        app:layout_constraintLeft_toLeftOf="@id/restaurant_name_text_view"
        app:layout_constraintBottom_toBottomOf="@id/restaurant_photo_image_view"
        android:text="opening time"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restaurant_photo_image_view"
        tools:src="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/distance_text_view"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>