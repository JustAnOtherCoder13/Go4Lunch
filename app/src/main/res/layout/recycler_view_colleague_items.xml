<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/avatar_image_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/basic_marge"
        android:contentDescription="@string/colleague_avatar_content_description_colleague_items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/user_selected_restaurant"
        style="@style/user_selected_restaurant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/avatar_image_view"
        app:layout_constraintStart_toEndOf="@id/avatar_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatar_image_view" />

    <FrameLayout
        android:id="@+id/separator"
        style="@style/workmate_separator"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/basic_marge"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/avatar_image_view"
        app:layout_constraintTop_toBottomOf="@id/avatar_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>